<UserControl
    x:Class="Timers.ToDoList.ToDoItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Timers.ToDoList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#fff">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>

            <TextBox Background="Transparent" BorderThickness="0" Foreground="White" Padding="4" VerticalAlignment="Center">Heee</TextBox>
            <Border
                Grid.Column="1"
                Background="Red" />
            <Border
                Grid.Column="2"
                Background="Green" />
        </Grid>
    </Border>
</UserControl>
